{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "lib": [
      "es2020"
    ],
    "outDir": "build",
    "rootDir": "./",
    "types": [
      "@types/node",
      "@adonisjs/core"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./**/*.ts"
  ]
}